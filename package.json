{
  "name": "@glrodasz/components",
  "version": "0.2.0",
  "private": false,
  "description": "A components library to create apps from zero to production",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/glrodasz/cero-components.git"
  },
  "scripts": {
    "dev": "yarn storybook",
    "test": "jest",
    "lint": "yarn lint-js && yarn lint-css",
    "lint-js": "eslint .",
    "lint-css": "stylelint \"**/*.css\"",
    "storybook": "start-storybook -p 6006 -s ./assets",
    "build-tokens": "node ./scripts/build-tokens",
    "build-storybook": "build-storybook -s ./assets",
    "create-component": "node ./scripts/create-component"
  },
  "keywords": [
    "react",
    "components"
  ],
  "author": "Juan Jose Vega <juanvega.tech@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@storybook/addon-actions": "6.0.21",
    "@storybook/addon-essentials": "6.0.21",
    "@storybook/addon-links": "6.0.21",
    "@storybook/addon-storyshots": "6.0.21",
    "@storybook/react": "6.0.21",
    "babel-jest": "26.3.0",
    "babel-loader": "8.1.0",
    "chromatic": "5.2.0",
    "enquirer": "2.3.6",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "husky": "4.2.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.4.2",
    "lint-staged": "10.3.0",
    "minireset.css": "0.0.6",
    "prettier": "2.1.1",
    "react-is": "16.13.1",
    "react-test-renderer": "16.13.1",
    "semantic-release": "17.1.2",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-prettier": "1.1.2"
  },
  "peerDependencies": {
    "minireset.css": "^0.0.6",
    "react": "16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build-tokens && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
