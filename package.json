{
  "name": "@glrodasz/components",
  "version": "0.3.2",
  "private": false,
  "description": "A components library to create apps from zero to production",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/glrodasz/cero-components.git"
  },
  "engines": {
    "node": ">=15.0.0",
    "yarn": ">=1.22.5"
  },
  "scripts": {
    "dev": "yarn storybook",
    "test": "jest",
    "lint": "yarn lint-js && yarn lint-css",
    "lint-js": "eslint --cache --fix",
    "lint-css": "prettier '**/*.css' --write && stylelint '**/*.css' --fix",
    "storybook": "start-storybook -p 6006",
    "build-tokens": "node ./scripts/build-tokens",
    "build-storybook": "yarn build-tokens && build-storybook",
    "deploy-storybook": "build-storybook && vercel --prod",
    "create-component": "node ./scripts/create-component"
  },
  "keywords": [
    "react",
    "components"
  ],
  "author": "Juan Jose Vega <juanvega.tech@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@storybook/addon-actions": "6.0.28",
    "@storybook/addon-essentials": "6.0.28",
    "@storybook/addon-links": "6.0.28",
    "@storybook/addon-storyshots": "6.0.28",
    "@storybook/react": "6.0.28",
    "babel-jest": "26.3.0",
    "babel-loader": "8.1.0",
    "chromatic": "5.2.0",
    "enquirer": "2.3.6",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "husky": "4.2.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.4.2",
    "lint-staged": "10.3.0",
    "minireset.css": "0.0.6",
    "prettier": "2.1.1",
    "react-is": "16.13.1",
    "react-test-renderer": "16.13.1",
    "semantic-release": "17.1.2",
    "stylelint": "13.7.2"
  },
  "peerDependencies": {
    "minireset.css": "^0.0.6",
    "react": "16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "yarn lint-js",
    "*.css": "yarn lint-css"
  },
  "dependencies": {
    "stylelint-config-recommended": "3.0.0",
    "stylelint-order": "4.1.0"
  }
}
